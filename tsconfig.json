{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@page/*": ["page/*"],
      "@types/*": ["types/*"],
      "@service/*": ["service/*"],
      "@context/*": ["context/*"],
      "test": ["/__tests__/*"]
    },
    "typeRoots": [
      "./src/types"
    ],
    "types": ["jest", "styled-components-react-native"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
